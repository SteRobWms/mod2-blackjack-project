<h1>Edit page</h1>
<%= form_for @player do |f| %> 
    <% if flash[:errors] %> 
        <ul>
        <% flash[:errors].each do |e| %>
            <li><%= e , style: "color: red"%></li>
        <% end %> 
        </ul>  
    <% end %> 
    <br>
    <%= form_for @player do |f| %> 
        <%= f.label "Player Name" %><br> 
        <%= f.text_field :name %>
        <br>
        <%= f.label "Age" %><br> 
        <%= f.text_field :age %>
        <br>
        <%= f.submit "Update" %>
    <% end %> 
<% end %> 