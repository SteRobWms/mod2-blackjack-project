<!DOCTYPE html>
<html>
    <head>
        <style>
            table {
                border-collapse: collapse;
            }
            td, th {
                border: 1px solid #dddddd;
                text-align: center;
                padding: 8px;
            }
        </style>
    </head>
    <body>
        <h1>Playing Game <%= @game.id %></h1>
        <table>
            <tr>
                <th>Minimum Bet</th>
                <th>Maximum Bet</th>
                <th>Player Bet</th>
            </tr>
            <tr>
                <td><%= @game.min_bet %></td>
                <td><%= @game.max_bet %></td>
                <td><%= @player_hand[:bet] %></td>
            </tr>
        </table>
        <br>
        <table>
            <tr>
                <th>Dealer</th>
                <% @dealer_hand_cards.each do |hand_card| %>
                    <td><img src="<%= hand_card.card[:image]%>" alt="<%= hand_card.card[:value]%> of <%= hand_card.card[:suit] %>"></td>
                <% end %>
            </tr>
            <tr>
                <td>
                    <%= @game.hands(@player.find_value(@dealer_hand_cards.pluck(:card_id))).sum %> / 21
                </td>
                <td>
                <% if @dealer_hand.active %>
                    <%= button_to("Hit Me", dealer_hand_path(@dealer_hand), method: "patch")%>
                <% end %> 
                </td>
            </tr>
        </table>
        <br>
        <table>
            <tr>
                <th><%= @player.name %></th>
                <% @player_hand_cards.each do |hand_card| %>
                    <td><img src="<%= hand_card.card[:image]%>" alt="<%= hand_card.card[:value]%> of <%= hand_card.card[:suit] %>"></td>
                <% end %>
            </tr>
            <tr>
                <td>
                    <%= @game.hands(@player.find_value(@player_hand_cards.pluck(:card_id))).sum %> / 21
                </td>
                <td>
                <% if @player_hand.active %>
                    <%= button_to("Hit Me", player_hand_path(@player_hand), method: "patch")%>
                <% end %> 
                </td>
                <td>
                <% if @player_hand.active %>
                    <%= button_to("Stand", stand_path(@player_hand), method: "post")%>
                <% end %>
                </td>
            </tr>
        </table>
    </body>
</html>
