<h1>Resigter</h1>
<%= form_with model: @player, url: register_path do |f| %> 
    <% if @player.errors.full_messages %>
        <% @player.errors.full_messages.each do |e| %> 
            <li class= "errors"><%= e %></li><br> 
        <% end %> 
    <% end %> 
    <br>
    <%= f.label "name" %><br> 
    <%= f.text_field :name %> 
    <br>
    <%= f.label "age" %><br> 
    <%= f.text_field :age %> 
    <br>
    <%= f.label :username %><br> 
    <%= f.text_field :username %>
    <br>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
    <br>
    <%= f.label :password_confirmation %><br> 
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.label :security_question %><br> 
    <%= f.select(:security_question , @security_questions) %>
    <br>
    <%= f.label "Answer" %><br> 
    <%= f.text_field :security_answer %> 
    <br>
    <%= f.submit "Resigter" %> 
<% end %> 
<br>
<%= button_to "Login", login_path, method: :get %> 